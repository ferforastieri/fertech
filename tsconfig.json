{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components": ["../valk-ui/packages/react/src/components"],
      "@/components/*": ["../valk-ui/packages/react/src/components/*"],
      "@/lib": ["../valk-ui/packages/react/src/lib"],
      "@/lib/*": ["../valk-ui/packages/react/src/lib/*"]
    }
  },
  "include": ["src", "../valk-ui/packages/react/src"]
}

